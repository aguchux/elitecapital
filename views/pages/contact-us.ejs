<%- include('../layouts/header') %>

<section class="contact-one pt-120 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <div class="contact-one__content">
          <div class="block-title">
            <p class="block-title__tagline">contact</p>
            <!-- /.block-title__tagline -->
            <h2 class="block-title__title">Feel free to get in touch</h2>
            <!-- /.block-title__title -->
          </div>
          <!-- /.block-title -->
          <p class="contact-one__text">
            Our team are ever ready to attend to you round the clock. So feel
            free to talk to us.
          </p>
          <p>
            <strong>Elite Capital Funding Group Inc</strong>
            4, Rexdale Blvd Etobicoke <br />
            ON M9W 1N6, Canada <br />
            1-484-558-0162 <br />
            1-484-750-5611 <br />
          </p>
          <!-- /.contact-one__text -->
          <div class="contact-one__social">
            <a href="<%= settings.siteTwitter %>"
              ><i class="fab fa-twitter"></i
            ></a>
            <a href="<%= settings.siteFacebook %>"
              ><i class="fab fa-facebook"></i
            ></a>
            <a href="<%= settings.siteLinkedin %>"
              ><i class="fab fa-linkedin"></i
            ></a>
            <a href="<%= settings.siteInstagram %>"
              ><i class="fab fa-instagram"></i
            ></a>
          </div>
          <!-- /.contact-one__social -->
        </div>
        <!-- /.contact-one__content -->
      </div>
      <!-- /.col-lg-4 -->
      <div class="col-lg-8">
        <form action="/form/contact-us" class="form-one contact-form-validated">
          <div class="row row-gutter-y-20 row-gutter-x-20">
            <div class="col-md-6">
              <input type="text" placeholder="Full name" name="name" />
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-6">
              <input type="email" placeholder="Email address" name="email" />
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-6">
              <input type="text" placeholder="Phone number" name="phone" />
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-6">
              <input type="text" placeholder="Subject" name="subject" />
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-12">
              <textarea placeholder="Message" name="message"></textarea>
            </div>
            <!-- /.col-md-6 -->
            <div class="col-md-12">
              <button type="submit" class="thm-btn">Send a Message</button
              ><!-- /.thm-btn -->
            </div>
            <!-- /.col-md-6 -->
          </div>
          <!-- /.row -->
        </form>
      </div>
      <!-- /.col-lg-8 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>
<!-- /.contact-one -->

<section class="contact-info-one">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-12">
        <div class="contact-info-one__item">
          <div class="contact-info-one__icon">
            <i class="icon-telephone"></i>
          </div>
          <!-- /.contact-info-one__icon -->
          <div class="contact-info-one__content">
            <p class="contact-info-one__text">Have any question?</p>
            <!-- /.contact-info-one__text -->
            <a
              class="contact-info-one__link"
              href="tel:<%= settings.siteFirstMobile %>"
              ><%= settings.siteFirstMobile %></a
            >
          </div>
          <!-- /.contact-info-one__content -->
        </div>
        <!-- /.contact-info-one__item -->
      </div>
      <!-- /.col-md-4 col-sm-12 -->
      <div class="col-md-4 col-sm-12">
        <div class="contact-info-one__item">
          <div class="contact-info-one__icon">
            <i class="icon-email"></i>
          </div>
          <!-- /.contact-info-one__icon -->
          <div class="contact-info-one__content">
            <p class="contact-info-one__text">Write us email</p>
            <!-- /.contact-info-one__text -->
            <a
              class="contact-info-one__link"
              href="mailto:<%= settings.siteEmail %>"
              ><%= settings.siteEmail %></a
            >
          </div>
          <!-- /.contact-info-one__content -->
        </div>
        <!-- /.contact-info-one__item -->
      </div>
      <!-- /.col-md-4 col-sm-12 -->
      <div class="col-md-5 col-sm-12">
        <div class="contact-info-one__item">
          <!-- /.contact-info-one__icon -->
          <div class="contact-info-one__content">
            <p class="contact-info-one__text">Visit anytime</p>
            <!-- /.contact-info-one__text -->
            <a class="contact-info-one__link" href="#"
              ><%= settings.siteAddress %></a
            >
          </div>
          <!-- /.contact-info-one__content -->
        </div>
        <!-- /.contact-info-one__item -->
      </div>
      <!-- /.col-md-4 col-sm-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>
<!-- /.contact-info-one -->
<%- include('../layouts/footer') %>
